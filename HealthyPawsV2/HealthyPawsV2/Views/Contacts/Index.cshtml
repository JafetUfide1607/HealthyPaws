@model IEnumerable<HealthyPawsV2.DAL.Contact>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WhatsApp)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WhatsApp)
                </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.contactId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.contactId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.contactId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
